---
import Layout from "../../layouts/Layout.astro";
import PageContent from "../../components/PageContent.astro"
import BottomBanner from "../../components/BottomBanner.astro";

const requirements =[
  "Identification documents of the parents and the minors."
]

const steps = [
  "Contact Lexdata Services for comprehensive advice to securely obtain the authorization for your minor children's departure from the country.",
  "Our legal team drafts your request in accordance with Ecuadorian legislation and your specific requirements.",
  "Coordinates with specialized notaries for the granting of the notarial act authorizing the minor's departure.",
  "Delivers your documents to the location of your choice."
]
---

<Layout
  title="Minor Exit Permits from Ecuador | Lexdata Services"
  description="Notarial authorization for minors to travel internationally from Ecuador. Secure processing and document delivery to your location."
  alternateES="/salida-de-menores"
  alternateEN="/en/salida-de-menores"
  breadcrumbs={[{ name: "Home", url: "/en/" }, { name: "Minor Exit Permits", url: "/en/salida-de-menores" }]}
  serviceName="Minor Exit Permits"
  serviceDescription="Notarial authorization for minors to travel internationally from Ecuador."
>
  <PageContent requirements={requirements} steps={steps} image="salida-menores" title=`minor's exit<br/>permits` alt="Minor exit permit authorization in Ecuador"/>
  <BottomBanner />
</Layout>
